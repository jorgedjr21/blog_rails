<div class="row">
  <div class="col-md-6">
    <p class="lead">Posts: <%= @posts.count %></p>
  </div>
  <div class="col-md-6">
    <a href="<%= new_admin_post_path %>" class="btn btn-info float-right">New Post</a>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Category</th>
          <th>Author</th>
          <th>Reactions</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %> </td>
            <td><%= post.title %></td>
            <td><%= post.category %></td>
            <td><%= post.author.name  %></td>
            <td>5</td>
            <td>
              <%= link_to 'Edit', edit_admin_post_path(post.id) %>
            </td>
            <td>
              <%= link_to 'Delete', admin_post_path(post.id), method: :delete %>
            </td>
          </tr>

        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="text-center"><span class="text-warning">0 posts found</span></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
